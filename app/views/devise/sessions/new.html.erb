<h2 class = "d-flex justify-content-center m-3 fw-bold">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class = "d-flex justify-content-center align-items-center flex-column">
 <div class="field">
    <%= f.label :email, class: "form-label fw-bold"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", size:"48", class:"form-control mb-3 " %>
  </div>

  <div class="field">
    <%= f.label :password, class: "fw-bold" %><br />
    <%= f.password_field :password, autocomplete: "current-password",size:"48", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "my-3"%>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-success" %>
  </div>
<%= render "devise/shared/links" %>
</div>
 <% end %>


