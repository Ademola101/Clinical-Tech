
<p>Patient Information</p>

<div> <%= form_for model: patient do |form|%>

<p> Creater by user  </p > <%= form.collection_select :patient_creator_id, User.all, :id, :email %> 
 <div>
<%= form.label :name %> <br>
<%= form.text_field :name%>

      
</div> 
<div>

<%= form.label :amount %> <br>
<%= form.text_field :amount%>
      
</div> 
