  <%= group_form.label :name %> <br>
    <%= group_form.text_field :name, placeholder: "name" %>
    </div>
    
    <div>
  <%= group_form.label :icon %> <br>
    <%= group_form.text_field :icon, placeholder: "icon" %>
    </div>
    <p>
